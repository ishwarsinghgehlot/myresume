<div id="main-wrapper">
 <div class="row">
  <div class="col-md-8">
    <div class="panel panel-dark">
        <div class="panel-heading clearfix">
            <h4 class="panel-title">Form Elements</h4>
        </div>
        <div class="panel-body">
        <%= form_with(model: testimonial, local: true,:class => "form-horizontal") do |form| %>
          <% if testimonial.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(testimonial.errors.count, "error") %> prohibited this testimonial from being saved:</h2>

            <ul>
            <% testimonial.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          </div>
        <% end %>

        <div class="form-group">
          <div class="col-sm-offset-1 col-sm-10">
              <%= form.text_field :mentor_name, id: :testimonial_mentor_name ,:class => "form-control input-rounded",:placeholder => "Mentor Name" %>  
          </div>
        </div> 

        <div class="form-group">
          <div class="col-sm-offset-1 col-sm-10">
              <%= form.text_field :company_name, id: :testimonial_company_name ,:class => "form-control input-rounded",:placeholder => "Company Name" %> 
          </div>
        </div> 

        <div class="form-group">
          <div class="col-sm-offset-1 col-sm-10">
              <%= form.text_area :description, id: :testimonial_description,:class => "form-control input-rounded",:placeholder => "Description" %> 
          </div>
        </div> 


          <div class="actions">
          <%= form.submit %>
        </div>
        <% end %>
         </div>
        </div>
      </div>
      </div>
      </div>
